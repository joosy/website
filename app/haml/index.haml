        %li
          %img{src: "/separator.png"}
        %li
          %a{href: "http://roundlake.ru"}
            %img.desaturate.roundlake{src: "/consumers/roundlake.png"}
        %li
          %img{src: "/separator.png"}
        %li
          %a{href: "http://mainpeople.com"}
            %img.desaturate.mp{src: "/consumers/MP.png", style: "padding-top:15px;"}
        %li
          %img{src: "/separator.png"}
        %li
          %a{href: "http://dvnts.ru"}
            %img.desaturate.dvnts{src: "/consumers/deviants.png"}
        %li
          %img{src: "/separator.png"}
